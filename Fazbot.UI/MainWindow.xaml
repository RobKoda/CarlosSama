<Window x:Class="Fazbot.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0" Name="AudioTasksListBox" MouseLeftButtonUp="AudioTasksListBox_OnMouseLeftButtonUp"
                 MouseRightButtonUp="AudioTasksListBox_OnMouseRightButtonUp" />
        <Grid Grid.Column="1">
            <StackPanel Name="ButtonsStack">
                <Button Click="JoinVoiceChannelButton_OnClickAsync" Content="Join Voice Channel" />
                <Button Click="LeaveVoiceChannelButton_OnClickAsync" IsEnabled="False" Content="Leave Voice Channel" />
            </StackPanel>
        </Grid>

    </Grid>
</Window>